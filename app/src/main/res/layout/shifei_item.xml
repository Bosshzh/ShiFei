<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lay_height"
    android:orientation="horizontal"
    android:background="@drawable/bottom_border_background">

    <TextView
        android:id="@+id/shifei_item_textview1"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:text="第一次"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/shifei_item_textview2"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:text="施肥时间(农历)"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />

    <TextView
    android:id="@+id/shifei_item_textview3"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:text="施肥量"
    android:gravity="center"
        android:layout_gravity="center_vertical"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/shifei_item_textview4"
        android:layout_width="wrap_content"
        android:text="公斤/亩"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />

</LinearLayout>
