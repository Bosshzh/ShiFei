<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context="com.lanling.fragment.ZhuyaoFragment">

        <com.lanling.view.TitlebarView
            android:id="@+id/fuwuchanping_titlebarview_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/titlebar"
            app:centerTitle="@string/zhuyao_title_centertext"
            app:centerTextColor="#FFF"
            app:rightDrawable="@mipmap/shangchuan1"
            app:rightText="@string/zhuyao_title_righttext"
            app:rightTextColor="#FFF"
            />

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_below="@+id/fuwuchanping_titlebarview_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" >


        </com.baidu.mapapi.map.MapView>

</RelativeLayout>